        <script><![CDATA[var CiList = '' + producer.select_cis;
var ciArray = CiList.split(",");
for (var i = 0; i < ciArray.length; i++) {
    gs.info("DPS found host in record producer " + ciArray[i]);
    var refList;
	var ciHasReferences = false;
    //find any references in task_ci
    var gr1 = new GlideRecord('task_ci');
    gr1.addQuery('ci_item', ciArray[i]);
    gr1.query();
	if (gr1.getRowCount()>0){
		refList = "CI attached to:";
		ciHasReferences = true;
	}else{
		var gg = new GlideDateTime();
		refList = "CI not referenced as of:" + gg.getDate();
	}
    while (gr1.next()) {
        refList = refList + ";" + gr1.task.number;
       gs.info("DPS found affected ci " + ciArray[i]);
		
    }

    var gr = new GlideRecord('cmdb_ci');
    gr.addQuery('sys_id', ciArray[i]);
    gr.query();
    gr.next();
    //gr.u_os_patching_team = "bb5921074fde3ac02f5aa34f9310c709";
    gr.setValue('comments', refList);
    gr.update();
	
	//now traverse in the custom table and check if record reference to ci already exists; if so update, else insert new record and reference to cmdb_ci
	
	var grCustom = new GlideRecord('x_27369_sacm_audit_ci_references');
	grCustom.addQuery('configuration_item', ciArray[i]);
	grCustom.query();
	if (grCustom.next()){
		grCustom.configuration_item = ciArray[i];
		grCustom.is_ci_referenced = ciHasReferences;
		grCustom.referenced_items = refList;
		grCustom.update();
	} else { //if record is not already inserted
		grCustom.configuration_item = ciArray[i];
		grCustom.is_ci_referenced = ciHasReferences;
		grCustom.referenced_items = refList;
		grCustom.insert();
	}
	
}
//gs.addInfoMessage("Adjust/Blank Data Request Submitted");]]></script>
